<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cmd">
		<jta-data-source>java:/OracleReservaViajes</jta-data-source>		
		<class>reserva.entidades.Ciudades</class>
		<class>reserva.entidades.Colaboradores</class>
		<class>reserva.entidades.Aerolinea</class>
		<class>reserva.entidades.SolicitudPas</class>
		<class>reserva.entidades.Hoteles</class>
		<class>reserva.entidades.SolicitudHotel</class>
		<class>reserva.entidades.UnidadesNegocio</class>
		<class>reserva.entidades.NivelesAcceso</class>
		<class>reserva.entidades.CentroCostos</class>
		
		<properties>
			<!--<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" 
				/> -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
